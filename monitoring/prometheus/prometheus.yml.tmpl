global:
  scrape_interval: 10s

scrape_configs:
- job_name: paas-prometheus-exporter-${name}
  scheme: https
  static_configs:
    - targets: [${paas_prometheus_exporter_endpoint}]
- job_name: Application
  dns_sd_configs:
    - names: 
       - ${git_app}
       - ${git_api}
       - ${git_tta}
      type: 'A'
      port: ${port}

alerting:
  alertmanagers:
  - scheme: https
    static_configs:
    - targets: [${alertmanager_endpoint}]

rule_files:
  - alert.rules
