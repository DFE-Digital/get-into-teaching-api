global:
  scrape_interval: 10s

scrape_configs:
- job_name: paas-prometheus-exporter-${name}
  scheme: https
  static_configs:
    - targets: [${paas_prometheus_exporter_endpoint}]
- job_name: ${api} 
  scheme: https
  static_configs:
    - targets: [${api}]

alerting:
  alertmanagers:
  - scheme: https
    static_configs:
    - targets: [${alertmanager_endpoint}]

rule_files:
  - alert.rules
