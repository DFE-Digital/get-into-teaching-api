global:
  scrape_interval: 10s

scrape_configs:
- job_name: PaaS Prometheus Exporter
  scheme: https
  static_configs:
    - targets: [${paas_prometheus_exporter_endpoint}]
- job_name: Application
  dns_sd_configs:
    - names: 
       - ${git_app}
      type: 'A'
      port: 3000
- job_name: TTA
  dns_sd_configs:
    - names: 
       - ${git_tta}
      type: 'A'
      port: 3000
- job_name: API
  dns_sd_configs:
    - names: 
       - ${git_api}
      type: 'A'
      port: 8080

alerting:
  alertmanagers:
  - scheme: https
    static_configs:
    - targets: [${alertmanager_endpoint}]

rule_files:
  - alert.rules
